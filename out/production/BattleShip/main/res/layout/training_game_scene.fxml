<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import battleship.controls.OceanGrid?>
<BorderPane xmlns="http://javafx.com/fxml"
            id="parent">
    <center>
        <OceanGrid id="ocean"
                   minWidth="200"
                   minHeight="200"
                   maxWidth="200"
                   maxHeight="200"
                   BorderPane.alignment="CENTER">
        </OceanGrid>
    </center>
    <right>
        <VBox spacing="10"
              maxWidth="200"
              alignment="CENTER">
            <Button id="restart"
                    text="restart game">
            </Button>
            <Button id="back"
                    text="back to menu">
            </Button>
            <TextArea id="console">
            </TextArea>
        </VBox>
    </right>
</BorderPane>